[core]
  excludesfile = /home/joel/.gitignore
  editor = vim
  pager = diff-so-fancy | less --tabs=4 -RFX
[user]
  name = Joel Tulloch
  email = joel@jtulloch.com
[merge]
  tool = vimdiff
[color]
  diff = auto
  status = auto
  branch = auto
  ui = always
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = difftool
  ut = rm --cached
  unstage = reset HEAD --
  last = log -1 HEAD
  psh = push origin master
  pll = pull origin master
  lg = log --name-only
  showfiles = show --name-only
  nl = log --pretty=format:'%h : %an(%ad) - %s' --graph --date=short
  propermerge = merge --squash --ff-only --no-commit
  fmerge = merge --ff-only
  save = stash save
  rename = branch -m
  diff = diff -w
  randomMerges = !git log --pretty=format:'%h - %s' --since='1 week ago' --merges | gshuf
[diff]
  tool = vimdiff
  compactionHeuristic = true
