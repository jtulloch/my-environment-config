[core]
    excludesfile = /home/joel/.gitignore
    editor = vim
[user]
	name = Joel Tulloch
	email = joel.tulloch@curvedental.com
[color]
	diff = auto
	status = auto
	branch = auto
[merge]
	tool = vimdiff
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = difftool
    ut = rm --cached
    unstage = reset HEAD --
    last = log -1 HEAD
    psh = push origin master
    pll = pull origin master
    lg = log --name-only
    showfiles = show --name-only
    nl = log --pretty=format:'%h : %an(%ad) - %s' --graph --date=short
    propermerge = merge --squash --ff-only --no-commit
    fmerge = merge --ff-only
    save = stash save
    rename = branch -m
    ll = log --pretty=format:'%h : %an - https://mingle.curvedms.org/projects/curve_hero/cards/%s'
[diff]
	tool = vimdiff
